<% form_for @internal_rent, :url => {:action => "add_equip"} do |f| %>

  <%= f.error_messages %>

  <b> Add equipment: </b>

  <%= hidden_field_tag "id", @agenda.id %>

  <div class="field required">
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :start, "Starts at: ", :class => "field_label" %>
    <%= select_time @agenda.start, :time_separator => ":" %>
  </div>

  <div class="field required">
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :duration, "Duration: ", :class => "field_label" %>
    <%= f.text_field :duration, :size => 1 %>h
  </div>

  <div class="field required">
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :equip_id, "Equipment: ", :class => "field_label" %>
    <%= f.collection_select(:equip_id,@aux, :id, :classification, :class =>"Equip") %>
  </div>

  <br />
  <%= f.submit "Add!" %>
<% end %>
