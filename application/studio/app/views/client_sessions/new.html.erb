<h1>Client Login</h1>

<% if current_client %>
  <%= current_client.login %>
<% end%>

<% form_for @client_session, :url => client_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>
