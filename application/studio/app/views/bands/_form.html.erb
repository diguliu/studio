<% form_for(@band) do |f| %>
  <%= f.error_messages %>

  <div class="field required"> 
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :name, "Name: ", :class => "field_label" %>  
    <%= f.text_field :name %>
  </div>

  <div class="field required"> 
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :login, "Login: ", :class => "field_label" %>  
    <%= f.text_field :login %>
  </div>

  <div class="field required"> 
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :password, "Password: ", :class => "field_label" %>  
    <%= f.password_field :password %>
  </div>

  <div class="field required"> 
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :password_confirmation, "Password confirmation: ", :class => "field_label" %>  
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field"> 
    <%= f.label :style, "Style: ", :class => "field_label" %>  
    <%= f.text_field :style %>
  </div>

  <div class="field"> 
    <%= f.label :homepage, "Homepage: ", :class => "field_label" %>  
    <%= f.text_field :homepage %>
  </div>

  <p><font color="red">* Required Fields</font></p>

  <p>
  <%= f.submit @submit_message %>
  </p>
<% end %>
