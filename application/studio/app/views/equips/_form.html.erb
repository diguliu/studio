  <% form_for(@equip) do |f| %>
    <%= f.error_messages %>


    <div class="field required"> 
      <font color="#F00" style="float: left;">*</font>
      <%= f.label :classification, "Classification: ", :class => "field_label" %>  
      <%= f.text_field :classification %>
    </div>

    <div class="field"> 
      <%= f.label :model, "Model: ", :class => "field_label" %>  
      <%= f.text_field :model %>
    </div>

  <div class="field"> 
    <%= f.label :description, "Description: ", :class => "field_label" %> 
    <%= f.text_area :description, :cols => 34, :rows => 3 %>  
  </div>

    <div class="field required"> 
      <font color="#F00" style="float: left;">*</font>
      <%= f.label :internal_price, "Internal price: ", :class => "field_label" %>  
      <%= f.text_field :internal_price %>
    </div>

    <div class="field required"> 
      <font color="#F00" style="float: left;">*</font>
      <%= f.label :external_price, "External price: ", :class => "field_label" %>  
      <%= f.text_field :external_price %>
    </div>

    <p><font color="red">* Required Fields</font></p>

    <%= f.submit @submit_message %>

  <% end %>

