<h1>Showing member</h1>

<div class="folder_header">
  <b>Name: </b> <%= @person.name%><br />

  <b>Cpf: </b> <%= @person.cpf %><br />

  <% if !@person.address.blank? %>
    <b>Address: </b> <%= @person.address %><br />
  <% end %>

  <% if !@person.email.blank? %>
    <b>Email: </b> <%= @person.email %><br />
  <% end %>

  <% if !@person.gender.blank? %>
    <b>Gender: </b> <%= @person.gender %><br />
  <% end %>

  <% if !@person.phone1.blank? %>
    <b>Phone 1: </b> <%= @person.phone1 %><br />
  <% end %>

  <% if !@person.phone2.blank? %>
    <b>Phone 2: </b> <%= @person.phone2 %><br />
  <% end %>
</div>


<% if permitted_to? :edit, @person %>
  <%= link_to 'Edit', edit_person_path(@person) %> |
<% end %>
<%= link_to 'Back', Authorization.current_user %>
