<% form_for(@person) do |f| %>

  <%= f.error_messages %>

  <div class="field required">
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :name, "Name: ", :class => "field_label" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email, "Email: ", :class => "field_label" %>
    <%= f.text_field :email %>
  </div>

  <div class="field required">
    <font color="#F00" style="float: left;">*</font>
    <%= f.label :cpf, "Cpf: ", :class => "field_label" %>
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :address, "Address: ", :class => "field_label" %>
    <%= f.text_area :address, :cols => 34, :rows => 3 %>  
  </div>

  <div class="field">
    <span class="field_label">Gender: </div>
    <%= f.label :gender_male, 'Male: ' %>
    <%= f.radio_button :gender, 'male', :checked => true  %>
    <%= f.label :gender_female, 'Female: ' %>
    <%= f.radio_button :gender, 'female' %>  
  </div>

  <div class="field">
    <%= f.label :phone1, "Phone 1: ", :class => "field_label" %>
    <%= f.text_field :phone1 %>
  </div>

  <div class="field">
    <%= f.label :phone2, "Phone 2: ", :class => "field_label" %>
    <%= f.text_field :phone2 %>
  </div>

  <p><font color="red">* Required Fields</font></p>

  <%= f.submit @submit_message %>

<% end %>
